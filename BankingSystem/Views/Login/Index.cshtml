@model BankingSystem.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Embedded CSS -->
<style>
    body {
        background: linear-gradient(135deg, #003d25, #ffd700);
        font-family: 'Segoe UI', sans-serif;
    }

    .form-card {
        max-width: 500px;
        margin: 60px auto;
        background: rgba(255, 255, 255, 0.98);
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        animation: fadeIn ease 0.5s;
    }

    .form-title {
        text-align: center;
        color: #004d26;
        font-weight: bold;
        font-size: 28px;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #004d26;
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-control {
        border-radius: 12px;
        border: 2px solid #ccc;
        padding: 10px 14px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #00793f;
            box-shadow: 0 0 5px rgba(0, 121, 63, 0.3);
            outline: none;
        }

    .btn-submit {
        background: linear-gradient(to right, #004d26, #00793f, #ffd700);
        color: white;
        border: none;
        border-radius: 30px;
        padding: 12px;
        font-weight: bold;
        font-size: 16px;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-submit:hover {
            transform: scale(1.03);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

    .form-link {
        display: block;
        margin-top: 18px;
        text-align: center;
        font-size: 14px;
        color: #004d26;
        text-decoration: none;
    }

        .form-link:hover {
            text-decoration: underline;
        }

    .text-warning {
        font-size: 13px;
    }

    .alert-warning {
        font-size: 14px;
        padding: 8px 12px;
        margin-top: 10px;
    }

</style>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Form Container -->
<div class="form-card">
    <div class="form-title">
        <i class="bi bi-shield-lock-fill me-2 text-warning"></i>
        Login to NBE Bank
    </div>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-warning mb-2"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">
                <i class="bi bi-envelope-fill"></i> Email
            </label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-warning"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">
                <i class="bi bi-lock-fill"></i> Password
            </label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-warning"></span>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-warning">@ViewBag.Error</div>
        }

        <button type="submit" class="btn-submit">
            <i class="bi bi-box-arrow-in-right me-1"></i> Login
        </button>

        <a asp-action="ForgotPassword" class="form-link">
            <i class="bi bi-question-circle me-1"></i> Forgot your password?
        </a>

        <a asp-controller="Users" asp-action="Create" class="form-link">
            <i class="bi bi-person-plus me-1"></i> Don’t have an account? <u>Register here</u>
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
